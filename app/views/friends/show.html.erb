

<div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
  <div class="card-header"><h1><%= @friend.first_name + @friend.last_name %></h1></div>
  <div class="card-body">
   <p class="card-text">
  <strong>Email:</strong>
  <%= @friend.email %>
</p>
<p class="card-text">
  <strong>Phone:</strong>
  <%= @friend.phone %>
</p>
<p class="card-text">
  <strong>Company:</strong>
  <%= @friend.company %>
</p>
 </div>
</div>
<%= link_to 'Edit', edit_friend_path(@friend),class:"btn btn-warning" %> 
<%= link_to 'Back', friends_path, class:"btn btn-dark"%>

